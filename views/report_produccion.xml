<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="fersuc.report_produccion">
    <t t-foreach="lineas(docs)" t-as="grupo">
        <t t-call="report.external_layout">
   
            <t t-call="report.internal_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2>Reporte Producci√≥n: <!--span t-field="o.descripcion"/--></h2>

                    <div class="row mt32 mb32">
                        <div class="col-xs-12">
                            <strong>Grupo:</strong><br/>
                            <span t-esc="grupo['grupo']"/>
                        </div>
                    </div>

                    <h3>Productos</h3>
                    <!--t t-set="total_factura" t-value="0"/-->

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th><strong>Producto</strong></th>
                                <th><strong>Cantidad</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="grupo['productos']" t-as="f">
                                <td>
                                    <span t-esc="f['producto']"/>
                                </td>
                                <td>
                                    <span t-esc="f['valor']"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </t>
</template>
</data>
</openerp>

